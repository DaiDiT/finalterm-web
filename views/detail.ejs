<div class="row">
  <div class="col-md-8">
    <h2>Detail Contact</h2>
    <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data contact tidak ada. <br>
        <a href="/contact" class="alert-link fw-normal">&laquo; kembali ke daftar contact</a>
      </div>
    <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name + ' - ' + contact.relation %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.phone %></h6>
          <h6 class="card-text"><%= contact.email %></h6>
          <h6 class="card-text"><%= contact.birthdate %></h6>
          <p class="card-text"><%= contact.address %></p>
          <hr>
          <p class="card-text"><%= (contact.note === '') ? 'Tidak ada catatan' : contact.note %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge">Ubah</a>
          <form method="POST" action="/contact?_method=DELETE" class="d-inline">
            <input type="hidden" name="name" value="<%= contact.name %>">
            <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin ingin menghapus <%= contact.name %>?')">Hapus</button>
          </form>
          <a href="/" class="card-link d-block mt-3">&laquo; Kembali ke daftar contact</a>
        </div>
      </div>
    <% }  %>
  </div>
</div>
